<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgroud"
    tools:context=".Activity.UpdatesActivitys.UpdateProductActivity">

    <Spinner
        android:id="@+id/spinnerUnidadeDeMedidaUpdate"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rouded_edit_text"
        android:spinnerMode="dialog"
        app:layout_constraintEnd_toEndOf="@+id/editTextSellValueForEdit"
        app:layout_constraintStart_toStartOf="@+id/editTextSellValueForEdit"
        app:layout_constraintTop_toBottomOf="@+id/editTextSellValueForEdit" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="EDITAR PRODUTO"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextExpenseValueforEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rouded_edit_text"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:hapticFeedbackEnabled="false"
        android:hint="Custo/Despesas"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/editTextNameProductForEdit"
        app:layout_constraintStart_toStartOf="@+id/editTextNameProductForEdit"
        app:layout_constraintTop_toBottomOf="@+id/editTextNameProductForEdit" />

    <EditText
        android:id="@+id/editTextSellValueForEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rouded_edit_text"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:hapticFeedbackEnabled="false"
        android:hint="Valor de venda"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/editTextExpenseValueforEdit"
        app:layout_constraintStart_toStartOf="@+id/editTextExpenseValueforEdit"
        app:layout_constraintTop_toBottomOf="@+id/editTextExpenseValueforEdit" />

    <TextView
        android:id="@+id/textViewQuant"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-thin"

        android:gravity="center"
        android:hapticFeedbackEnabled="false"
        android:text="Quantidade "
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/spinnerUnidadeDeMedidaUpdate"
        app:layout_constraintStart_toStartOf="@+id/spinnerUnidadeDeMedidaUpdate"
        app:layout_constraintTop_toBottomOf="@+id/spinnerUnidadeDeMedidaUpdate" />

    <EditText
        android:id="@+id/valueOfSeekUpdate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rouded_edit_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerUnidadeDeMedidaUpdate"
        app:layout_constraintStart_toStartOf="@+id/spinnerUnidadeDeMedidaUpdate"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuant" />

    <EditText
        android:id="@+id/editTextNameProductForEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/rouded_edit_text"
        android:ems="10"
        android:fontFamily="sans-serif-thin"
        android:hapticFeedbackEnabled="false"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView49"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-thin"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/editTextNameProductForEdit"
        app:layout_constraintEnd_toEndOf="@+id/editTextNameProductForEdit"
        app:layout_constraintStart_toEndOf="@+id/textView49"
        app:layout_constraintTop_toBottomOf="@+id/textView49" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rouded_button"
        android:onClick="validateFields"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_check_24" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rouded_button_delete"
        android:onClick="deleteEconomicOperation"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_clear_24" />
</androidx.constraintlayout.widget.ConstraintLayout>