<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Estoque3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/IntermediateDMBlue</item>
        <item name="colorPrimaryVariant">@color/IntermediateDMBlue</item>
        <item name="colorOnPrimary">@color/IntermediateDMBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/IntermediateDMBlue</item>
        <item name="colorSecondaryVariant">@color/IntermediateDMBlue</item>
        <item name="colorOnSecondary">@color/TextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/TextColor</item>
    </style>

    <style name="Theme.Estoque3.Spinner" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:textColorHint">@color/TextColor</item>

    </style>

    <style name="Theme.Estoque3.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Estoque3.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/BackgroundColor</item>
    </style>

    <style name="Theme.Estoque3.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Estoque3.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Estoque3.NoActionBar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Estoque3.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Estoque3.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>